{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "preserve",
      "strict": true,
      "moduleResolution": "node",
      "allowJs": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  